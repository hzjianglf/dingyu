/***************/
/* Consistency */
/***************/

html, body, p, div, h1, h2, h3, h4, h5, fieldset, legend, table, tbody, td, tr, th, label, input, select, option, form, br, img, ul, li, textarea, dl, dt, dd, span, button, iframe {
  margin: 0em;
  padding: 0em;
}

html, body {
  height: 100%;
  background-color: white;
}

body {
  font-family: Verdana, Arial, Helvetica, Sans-serif;
  font-size: 0.65em;
}

input, select, textarea, option, button {
  font-family: Verdana, Arial, Helvetica, Sans-serif;
  font-size: 1em;
  color: black;
}

img {
  border: 0;
}

a {
  color: #0000ff;
  text-decoration: none;
}

a:visited {
  color: #0000ff;
  text-decoration: none;
}

a:hover {
  color: #0000ff;
  text-decoration: underline;
}

code, pre {
  font-family: "Courier New", Courier, monospace;
}

table, h1, h2, h3, h4, h5 {
  font-size: 1em;
}

td, th {
  vertical-align: top;
}

th {
  text-align: left;
}

/*****************/
/* Accessibility */
/*****************/
.accessibility-jumps-top {
  font-size: 0;
  color: #FFFFFF;
  position: relative;
  left: -10000;
  height: 0;
  line-height: 0;
}

.accessibility-jumps-top a {
  color: #FFFFFF;
}

/********************/
/* Standard borders */
/********************/
input {
  border-top: 1px solid #336699;
  border-left: 1px solid #336699;
  border-bottom: 1px solid #8cb1d1;
  border-right: 1px solid #8cb1d1;
  margin: 0.1em 0em 0.1em 0.1em;
  padding: 0.1em;
}

fieldset {
  border: 1px solid #88a4d7;
  margin: 0.2em 0.5em 0.5em 0em;
  padding: 0.2em;
}

legend {
  padding: 0.1em 0.5em 0.1em 0.5em;
  margin-left: 0.5em;
  color: #336699;
  font-weight: bold;
}

select {
  margin: 0.1em;
  border-top: 1px solid #336699;
  border-left: 1px solid #336699;
  border-bottom: 1px solid #8cb1d1;
  border-right: 1px solid #8cb1d1;
}

option {
  padding: 0.1em;
}

textarea {
  border-top: 1px solid #336699;
  border-left: 1px solid #336699;
  border-bottom: 1px solid #8cb1d1;
  border-right: 1px solid #8cb1d1;
  margin: 0em 0.1em 0.5em 0.1em;
  padding: 0.1em;
}

.standardbutton, .tundra button.dijitButtonNode, .tundra .dijitButtonHover button.dijitButtonNode {
  margin: 0.1em 0.2em 0.1em 0.2em;
  border-right: #336699 1px solid; 
  border-top: #8cb1d1 1px solid;
  border-left: #8cb1d1 1px solid; 
  border-bottom: #336699 1px solid; 
  background: url("../images/buttonEnabled.gif") repeat-x top left #EAF1FF;
  padding: 0em 0.2em 0em 0.2em !important;
  width: auto !important;
}

.safari .standardbutton, .tundra .safari button.dijitButtonNode, .tundra .safari .dijitButtonHover button.dijitButtonNode {
  padding: 0.1em 0.4em 0.1em 0.4em !important;
}

.opera .standardbutton, .tundra .opera button.dijitButtonNode, .tundra .opera .dijitButtonHover button.dijitButtonNode {
  padding: 0.1em 0.4em 0.1em 0.4em !important;
}

input[type=submit], input[type=button] {
  border-top: 1px solid #8cb1d1 !important;
  border-left: 1px solid #8cb1d1 !important;
  border-bottom: 1px solid #336699 !important;
  border-right: 1px solid #336699 !important;
  background-color: #eaf1ff;
}

input[type=radio] {
  vertical-align: middle;
  border: 0px !important;
}

input[type=checkbox] {
  vertical-align: top;
}

/********/
/* misc */
/********/
.noborder {
  border: 0px !important;
}

.autowidth {
  width: auto !important;
}

/***************/
/* login panel */
/***************/
.logincontainer {
	background: transparent;
	position: absolute;
	left: 42%;
	top: 30%;
	width: 260px;
}

.loginpanel {
  border: 1px solid #cccccc;
  background-color: #ffffff;
  padding: 0.5em 1.0em 0.5em 1.0em;
  position: relative;
  left: -16px;
  top: -16px;
}

.ie .loginpanel {
  width: 244px;
  zoom: 1;
}

.loginpanel h1 {
  font-size: 1.2em;
  font-weight: bold;
  border-bottom: 0px;
  margin: 0.2em 0.5em 0.2em 0em;
}

.loginpanel p {
  margin-top: 0.8em;
  margin-bottom: 0.8em;
}

.logininput {
  padding-top: 0.5em;
}

.logininput input {
  padding: 0.1em;
  width: 25ex;
}

.logininput label {
  margin-left: 0em;
}

.loginbackground {
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: url(../images/loginBackground.jpg) top left no-repeat;
}

.loginbanner {
  background: url(../images/bannerBackground.png) top left no-repeat;
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 46px;
}

.loginbanner img#webspherelogo {
  position: absolute;
  top: 11px;
  left: 36px;
}

.loginbanner img#productname {
  position: absolute;
  top: 17px;
  left: 130px;
}

.loginbanner img#ibmlogo {
  position: absolute;
  top: 16px;
  right: 39px;
}

/***************/
/* drop shadow */
/***************/
.dropshadowtopright {
  position: relative;
  background: url(../images/border_top_right.png) top right no-repeat;
}

.ie6 .dropshadowtopright {
  background: none;
}

.dropshadowbottomleft {
  position: relative;
  padding-top: 16px;
  padding-left: 16px;
  background: url(../images/border_bottom_left.png) bottom left no-repeat;
}

.ie6 .dropshadowbottomleft {
  background: none;
}

.dropshadow {
  position: relative;
  background: url(../images/border_drop.png) bottom right no-repeat;
}

.ie6 .dropshadow {
  background: none;
}
