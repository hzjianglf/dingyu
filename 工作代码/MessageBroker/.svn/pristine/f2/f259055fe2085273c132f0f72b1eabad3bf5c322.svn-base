<div class="portlet" id="datetimepicker">
  <div class="portletbody" id="datetimepickerbody">
    <table border="0" cellpadding="0" cellspacing="0" class="datetimepickertable">
      <tr>
        <td valign="top">
          <div class="mediumpad">
        	  <div dojoType="com.ibm.sr.widgets.DateSelector" dojoAttachEvent="updateDate: _dateSelected" dojoAttachPoint="dateselector"></div>
          </div>
        </td>
        <td valign="top">
          <div class="spaceabove">
    				<div dojoType="com.ibm.sr.widgets.TimeSelector" hoursLabel="${textHour}:" minutesLabel="${textMinute}:" secondsLabel="${textSecond}:"  dojoAttachEvent="updateTime: _timeSelected" dojoAttachPoint="timeselector"></div>
          </div>
        </td>
      </tr>
    </table>
    <div class="buttongroup">
    	<button dojoType="dijit.form.Button" dojoAttachEvent="_clicked: _onOKClick">${buttonOK}</button><button dojoType="dijit.form.Button" dojoAttachEvent="_clicked: _onCancelClick">${buttonCancel}</button>
    </div>
  </div> <!-- end portlet body -->
</div>