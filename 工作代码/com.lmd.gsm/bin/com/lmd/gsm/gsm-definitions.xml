<?xml version="1.0" encoding="UTF-8"?>
<ServiceModule id="gsmservice"  name="短信服务" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ServiceModule.xsd">
