      <implementation  class="com.lmd.gsm.service.impl.GsmServiceImpl"/>
      <properties>
         <property name="firstKey" value="aStringValue"/>
         <property name="secondKey" value="anotherStringValue"/>
      </properties>
   </ServiceComponent>
