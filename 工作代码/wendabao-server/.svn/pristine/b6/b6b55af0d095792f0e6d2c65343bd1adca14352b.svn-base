package com.handany.base.common;


/**
 * 缓存常量
 * @author lhb
 *
 */
public class Constants {
	
	/**
	 * 缓存超时时间（秒）：1 分钟
	 */
	public static int SECONDS_MINUTE = 60;
	
	/**
	 * 缓存超时时间（秒）：1 小时
	 */
	public static int SECONDS_HOUR = SECONDS_MINUTE * 60;
	
	
	/**
	 * 缓存超时时间（秒）：1 天
	 */
	public static int SECONDS_DAY = SECONDS_HOUR * 24;
	
	/**
	 * 缓存超时时间（秒）：1 周
	 */
	public static int SECONDS_WEEK= SECONDS_DAY * 7;
	
	/**
	 * 缓存超时时间（秒）：1 月
	 */
	public static int SECONDS_MONTH= SECONDS_DAY * 30;
	
	/**
	 * 分隔符
	 */
	public static final String SPLITOR = "@___@";
	
	/**
	 * 图片上传地址
	 */
	public static String IMAGE_SERVER="http://192.168.1.2:8888";
}
